doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Create New Customer
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
  script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js' integrity='sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js' integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo' crossorigin='anonymous')
  script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js' integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6' crossorigin='anonymous')
  link(rel='stylesheet' href='/public/css/create.css')

  
form#createCustomer(action="/postCustomer" method="POST")(style="width: 500px; margin:auto")
  main#inner_wrapper
    h1.text-center
      | Create New
      div
        label.input(for='name') #[strong Name]
        input#name.input.form-control(type='text' name='name' spellcheck='false')  
      div
        label.input #[strong Email]
        input#email.input.form-control(type='email' name='email' spellcheck='false' pattern='^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$')
      div
        label.input #[strong Birth Date]
        input#birthDate.input.form-control(type='date' name='date')
      div
        label.input #[strong Gender]
        select#gender.input.form-control(for='gender' type='text' name='gender')
          option(value='Male') Male
          option(value='Female') Female
      div
        label.input #[strong Weight:] pounds
        input#weight.input.form-control(type='number' min='0' value='50.0' max='600' step='0.1' name='weight')
      div
        label.input #[strong Height:] feet
        input#height.input.form-control(type='number' min='1.00' value='6.0' step='0.01' name='height')      
      div
        label.input #[strong Bodyfat:] percentage
        input#bodyFat.input.form-control(type='number' min='1.0' max='50.0' value='1.0' step='0.1' name='bodyFat')       
      div
        label.input #[strong Phone Number]
        input#phoneNumber.input.form-control(type='tel' name='number' pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" title="Requested format: 'xxx-xxx-xxx' ")
      div
        label.input #[strong Additional Notes]
        textarea#notes.input.form-control(name='notes' minlength='10')

      button#submit.btn.btn-primary(type='submit')  Submit 

      a(href='/')
        button#cancel.btn.btn-secondary(type="button") Cancel



